upstream secretsanta_backend {
    server 127.0.0.1:8000;
}

server {
    server_name maxvonknobloch.com www.maxvonknobloch.com;

    # Serve static files / built frontend from filesystem
    # Replace with where you copy the frontend build output on the server
    location /secretsanta/static/ {
        alias /var/www/secretsanta/static/;
        access_log off;
        expires 30d;
        add_header Cache-Control "public";
        try_files $uri =404;
    }

    # Serve index.html and assets for SPA root and internal routes
    location = /secretsanta/ {
        try_files /index.html =404;
        root /var/www/secretsanta;
        access_log off;
    }

    # For any client URL under /secretsanta that is not an asset, serve index.html
    # This allows SPA client-side routing (React Router)
    location /secretsanta/ {
        # If request looks like a real file, serve it from /var/www/secretsanta
        root /var/www/secretsanta;
        try_files $uri $uri/ /index.html;
        access_log off;
    }

    # API proxy: /secretsanta/api/* -> backend /api/*
    location ^~ /secretsanta/api/ {
        proxy_pass http://secretsanta_backend/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Prefix /secretsanta;
        proxy_redirect off;
        proxy_read_timeout 120;
        proxy_buffering off;
    }

    # Let certbot access ACME challenges if you use it
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    # Security headers
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options DENY;
    add_header X-XSS-Protection "1; mode=block";

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/maxvonknobloch.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/maxvonknobloch.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    listen 80;
    server_name maxvonknobloch.com www.maxvonknobloch.com;

    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }

    # Redirect other HTTP requests to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

